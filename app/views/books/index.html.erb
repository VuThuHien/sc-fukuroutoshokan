<p id="notice"><%= notice %></p>

<h1>Books</h1>

<%= search_form_for @q do |f| %>

  <%= f.label :title_cont %>
  <%= f.search_field :title_cont %>

  <%= f.label :title_or_publisher_or_description_cont %>
  <%= f.search_field :title_or_publisher_or_description_cont %>

  <%= f.submit %>
<% end %>


<style>
table {
	border-collapse: collapse;
}
td {
	border: solid 1px;
	padding: 0.5em;
}
</style>


<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tr>
    <td><b>Title</b></td>
    <td><b>Publisher</b></td>
    <td></td>
  </tr>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.publisher %></td>
        <td><%= link_to 'Show', book %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
