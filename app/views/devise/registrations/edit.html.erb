<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>


  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>



<div class="form-group pmd-textfield">
  <label for="regular1" class="control-label">
    Email
  </label>
  <%= f.email_field :email, autofocus: true, autocomplete: "email",id:"regular1",class:"form-control"%>
</div>
<!-- Password Input -->
<div class="form-group pmd-textfield">
  <label for="password1" class="control-label">
    Password
  </label>
    <% if @minimum_password_length %>
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "off",id:"password1",class:"form-control"%>
</div>
<div class="form-group pmd-textfield">
  <label for="password1" class="control-label">
    Password Confirmation
  </label>
  <%= f.password_field :password_confirmation, autocomplete: "off",id:"password1",class:"form-control" %>
</div>
<div class="form-group pmd-textfield">
  <label for="password1" class="control-label">
    Current Password
  </label>
  <%= f.password_field :current_password, autocomplete: "off",id:"password1",class:"form-control" %>
</div>
<!--Help Text Input -->
<div class="form-group pmd-textfield">
  <label for="help1">
    Name
  </label>
  <%= f.text_field :name,id:"help1",class:"form-control" %>
</div>
<div class="form-group pmd-textfield">
  <label for="help1">
    Age
  </label>
  <%= f.number_field :age,id:"help1",class:"form-control" %>
</div>


  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>


