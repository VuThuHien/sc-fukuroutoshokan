<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="form-group pmd-textfield">
    <label for="regular1" class="control-label">
      Email
    </label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", id:"regular1" %>
  </div>
  <!-- Password Input -->
  <div class="form-group pmd-textfield">
    <label for="password1" class="control-label">
      Password
    </label>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class:"form-control", id:"password1" %>
  </div>
  <div class="form-group pmd-textfield">
    <label for="password1" class="control-label">
      Password confirmation
    </label>
    <%= f.password_field :password_confirmation, autocomplete: "off",id:"password1",class:"form-control" %>
  </div>
  <!--Help Text Input -->
  <div class="form-group pmd-textfield">
    <label for="help1">
      Name
    </label>
    <%= f.text_field :name,id:"help1",class:"form-control"%>
  </div>
  <div class="form-group pmd-textfield">
    <label for="help1">
      Age
    </label>
    <%= f.number_field :age,id:"help1",class:"form-control" %>
  </div>





  


  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>





