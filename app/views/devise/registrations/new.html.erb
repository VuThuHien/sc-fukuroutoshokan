<div class="limiter">
	<div class="container-login100">
		<div class="wrap-login100">
		  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
		    <div class="login100-form validate-form">
		      <%= devise_error_messages! %>
  				<span class="login100-form-title p-b-43">
  					Sign up
  				</span>
  				
  				
  				<div class="wrap-input100 validate-input" data-validate = "Valid email is required: ex@abc.xyz">
  					<%= f.text_field :username, autofocus: true, class:"input100"%>
  					<span class="focus-input100"></span>
  					<span class="label-input100">Username</span>
  				</div>
  				
  				<div class="wrap-input100 validate-input" data-validate = "Valid email is required: ex@abc.xyz">
  					<%= f.email_field :email,id:"help1",class:"input100"%>
  					<span class="focus-input100"></span>
  					<span class="label-input100">Email</span>
  				</div>
  				
  				<div class="wrap-input100 validate-input" data-validate = "Valid email is required: ex@abc.xyz">
  					<%= f.text_field :name,id:"help1",class:"input100"%>
  					<span class="focus-input100"></span>
  					<span class="label-input100">Name</span>
  				</div>
  				
  				<div class="wrap-input100 validate-input" data-validate="Password is required">
  					<%= f.password_field :password, autocomplete: "off",id:"password1",class:"input100" %>
  					<span class="focus-input100"></span>
  					<span class="label-input100">Password
  					<% if @minimum_password_length %>
              <i>(<small><%= @minimum_password_length %> characters minimum</small>)</i>
            <% end %><br /></span>
  				</div>
  				
  				<div class="wrap-input100 validate-input" data-validate="Password is required">
  					<%= f.password_field :password_confirmation, autocomplete: "off",id:"password1",class:"input100" %>
  					<span class="focus-input100"></span>
  					<span class="label-input100">Password confirmation</span>
  				</div>
  
  				<div class="flex-sb-m w-full p-t-3 p-b-32">
  					<div class="file-container">
              <%= f.label :avatar %>
              <%= f.file_field :image, class: "upload-image", id: "filePhoto" %>
            </div>
  				</div>
  		
  
  				<div class="container-login100-form-btn">
  					<!--<button class="login100-form-btn">-->
  					<!--	Login-->
  					<!--</button>-->
  					<%= f.submit "Sign up", class:"login100-form-btn" %>
  				</div>
  			</div>
				
			<% end %>

			<div class="login100-more" style="background-image: url('https://colorlib.com/etc/lf/Login_v18/images/bg-01.jpg');">
			</div>
		</div>
	</div>
</div>
