<div class="body">
  <div class="body_resize">
    <div class="left">
    <% @reviews.each do |review| %>
      <img src="<%= review.book.picture %>" alt="" width="80" height="95">
      <h2>
        <%= link_to review_path(review), data: {turbolinks: false} do %>
            <%= review.title %>
          <% end %>
        <br />
        <span>
          Posted by <%= link_to review.user.name, user_path(review.user),
          data: {turbolinks: false} %> | 
          <% if review.book.categories.any? %>
            <% review.book.categories.each do |category| %>
              <%= link_to t(category.title), category_path(category),
                data: {turbolinks: false} %>
              <% unless category == review.book.categories.last %>/<% end %>
            <% end %>
          <% end %>
        </span>
      </h2>
      <div class="bg"></div>
      <p>
        <%= truncate_html(review.content.html_safe, length: 600) %>
      </p>
      <p><%= review.comments.count %> Comments | <%= review.likes.count %> likes</p>
      <div class="bg"></div>
    <% end %>
    </div>

    <div class="right">
      <h3>Sidebar Menu</h3>
      <div class="bg"></div>
      <ul>
        <li><a href="#">Home</a></li>
      </ul>
